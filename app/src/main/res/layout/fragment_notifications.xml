<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/settings"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:drawableStart="@drawable/ic_baseline_account_circle_24"
                android:drawablePadding="10dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/textView7"
                android:textColor="#f3b838"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Profile Photo"
                android:layout_marginTop="20dp"
                android:textSize="25sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_marginLeft="5dp"
                android:textColor="#f3b838"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/ic_baseline_circle_notifications_24"
                android:textStyle="bold"
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Notifications"
                android:layout_marginTop="20dp"
                android:textSize="25sp"/>

            <TextView
                android:layout_marginLeft="5dp"
                android:textStyle="bold"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/ic_baseline_privacy_tip_24"
                android:textColor="#f3b838"
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Privacy"
                android:layout_marginTop="20dp"
                android:textSize="25sp"/>

            <TextView
                android:layout_marginLeft="5dp"
                android:textStyle="bold"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/ic_baseline_help_24"
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Help"
                android:textColor="#f3b838"
                android:layout_marginTop="20dp"
                android:textSize="25sp"/>

            <Switch
                android:layout_marginLeft="5dp"
                android:id="@+id/switch3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:minHeight="48dp"
                android:text="Dark Mode"
                android:textColor="#f3b838"
                android:textSize="25sp"
                android:textStyle="bold" />
            <TextView
                android:layout_marginLeft="5dp"
                android:textStyle="bold"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/ic_baseline_lock_24"
                android:textColor="#f3b838"
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Change Password"
                android:layout_marginTop="20dp"
                android:textSize="25sp"/>

            <TextView
                android:layout_marginLeft="5dp"
                android:textStyle="bold"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/ic_baseline_add_circle_24"
                android:textColor="#f3b838"
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Status"
                android:layout_marginTop="20dp"
                android:textSize="25sp"/>

            <Switch
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:minHeight="48dp"
                android:text="Private Account"
                android:textColor="#f3b838"
                android:textSize="25sp"
                android:textStyle="bold" />
            <TextView
                android:layout_marginLeft="5dp"
                android:id="@+id/txt"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/ic_baseline_login_24"
                android:textStyle="bold"
                android:textColor="#f3b838"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Log Out"
                android:layout_marginTop="20dp"
                android:textSize="25sp" />
        </LinearLayout>
    </FrameLayout>
</LinearLayout>